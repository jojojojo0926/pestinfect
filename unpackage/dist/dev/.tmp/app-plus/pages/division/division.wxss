
view {
	font-size: 28rpx;
}
/*问题反馈*/
.feedback-title {

	padding: 20rpx;
	font-weight: 600;
	font-size: 35rpx;
}
.feedback-textarea {
	width: 60%;
	color: #000000;
	font-weight: 400;
	font-size: 35rpx;
	padding: 10rpx 20rpx;
	background-color: #e1e1e1;
	border-radius: 30rpx;
	opacity: 0.7;
}
.feedback-submit {
	background-color: #FF5053;
	font-weight: 700;
	color: #fff;
	margin: 30rpx;
	opacity: 0.8;
	border-radius: 50rpx;
}
.uni-list {
	background-color: #FFFFFF;
	position: relative;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	border-radius: 20rpx;
	opacity: 0.7;
}
.uni-list:after {
	position: absolute;
	z-index: 10;
	right: 0;
	bottom: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #c8c7cc;
}
.uni-list::before {
	position: absolute;
	z-index: 10;
	right: 0;
	top: 0;
	left: 0;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #c8c7cc;
}
.uni-list-cell {
	position: relative;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.uni-list-cell-hover {
	background-color: #eee;
}
.uni-list-cell-pd {
	padding: 22rpx 30rpx;
}
.uni-list-cell::after {
	position: absolute;
	z-index: 3;
	right: 0;
	bottom: 0;
	left: 30rpx;
	height: 1px;
	content: '';
	-webkit-transform: scaleY(.5);
	transform: scaleY(.5);
	background-color: #c8c7cc;
}
.content{
	height: 100%;
}

