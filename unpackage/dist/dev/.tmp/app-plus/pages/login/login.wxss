
.header {
	width: 161rpx;
	height: 161rpx;
	background: rgba(63, 205, 235, 1);
	box-shadow: 0rpx 12rpx 13rpx 0rpx rgba(63, 205, 235, 0.47);
	border-radius: 50%;
	margin-top: 30rpx;
	margin-left: auto;
	margin-right: auto;
}
.header image {
	width: 161rpx;
	height: 161rpx;
	border-radius: 50%;
}
view {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.input-view {
	border-bottom-style: solid;
	border-bottom-width: 3rpx;
	border-bottom-color: #ddd;
	background-color: #fff;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	width: 95%;
	padding: 20rpx 20rpx;
	opacity: 0.7;
	margin-top:5% ;
	border-radius: 30rpx;
}
.label-view {
	width: 100rpx;
	height: 60rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-right: 30rpx;
}
.label {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	line-height: 60rpx;
	font-size: 34rpx;
	color: #555;
	text-align: left;
}
.input {
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	height: 60rpx;
	font-size: 34rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.button-view {
	margin-top: 50rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.content {
	height: 1500rpx;
}
button {
	width: 710rpx;
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	font-size: 34rpx;
	margin-bottom: 30rpx;
	right: 2.5%;
}
button.register {
	margin-top: 30rpx;
	color: #ff80ab;
	background-color: #fff;
	border-color: #ff80ab;
	border-width: 2rpx;
}

